      <bootclasspath refid="kursovaya.module.bootclasspath"/>
      <classpath refid="kursovaya.module.production.classpath"/>
      <src refid="kursovaya.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.kursovaya"/>
    </javac2>
    
    <copy todir="${kursovaya.output.dir}">
      <fileset dir="${module.kursovaya.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.kursovaya.tests" depends="register.custom.compilers,compile.module.kursovaya.production" description="compile module kursovaya; test classes" unless="skip.tests"/>
  
  <target name="clean.module.kursovaya" description="cleanup module">
