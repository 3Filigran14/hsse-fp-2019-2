  </patternset>
  
  <path id="kursovaya.module.sourcepath">
    <dirset dir="${module.kursovaya.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.kursovaya" depends="compile.module.kursovaya.production,compile.module.kursovaya.tests" description="Compile module kursovaya"/>
  
  <target name="compile.module.kursovaya.production" depends="register.custom.compilers" description="Compile module kursovaya; production classes">
    <mkdir dir="${kursovaya.output.dir}"/>
    <javac2 destdir="${kursovaya.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.kursovaya}/javac">
